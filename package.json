{
  "name": "neonbx",
  "version": "0.1.1",
  "description": "Neon Database Branch Navigator CLI â€” switch between Neon Postgres branches by updating local .env connection strings",
  "type": "module",
  "bin": {
    "neonbx": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --banner:js='#!/usr/bin/env node' --packages=external",
    "prepublishOnly": "pnpm build",
    "release:patch": "npm version patch --no-git-tag-version && pnpm build && ./scripts/release.sh",
    "release:minor": "npm version minor --no-git-tag-version && pnpm build && ./scripts/release.sh",
    "release:major": "npm version major --no-git-tag-version && pnpm build && ./scripts/release.sh",
    "dev": "node --import tsx src/index.ts",
    "start": "node dist/index.js"
  },
  "keywords": [
    "neon",
    "neondb",
    "postgres",
    "database",
    "branch",
    "cli",
    "env",
    "connection-string"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itaylisaey/neonbx.git"
  },
  "homepage": "https://github.com/itaylisaey/neonbx#readme",
  "author": "Itay Lisaey",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "commander": "^13.1.0",
    "conf": "^13.1.0",
    "dotenv": "^16.4.7",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
